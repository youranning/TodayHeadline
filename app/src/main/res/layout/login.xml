<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/my_page_background"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/login_qq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_drawer_qzone"
            />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_drawer_tencent"
            android:layout_width="70dp"
            android:layout_height="70dp"

            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_drawer_weibo"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wiper_switch_off_btn" />

        <TextView
            android:id="@+id/login_more"
            android:clickable="true"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多登陆方式"/>
        <ImageView
            android:layout_marginLeft="220dp"
            android:layout_marginTop="129dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/name_arrow_night"/>

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"

            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/favoriteicon_profile"
            />
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/new_review_tabbar"
            />
        <TextView
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"

            android:text="历史"
            />

        <CheckBox
            android:layout_marginTop="18dp"
            android:checked="true"
            android:id="@+id/night_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:button="@null"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/select"
            android:gravity="center"
            android:text="夜间模式"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


    <TextView
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="left"
        android:textSize="20dp"
        android:text="消息通知"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_msg"/>

    <ImageView

        android:layout_marginTop="19dp"
        android:padding="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/name_arrow_night"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <TextView
        android:textSize="20dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"

        android:text="头条商城"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_shop"/>

    <ImageView

        android:layout_marginTop="19dp"
        android:padding="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/name_arrow_night"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <TextView
        android:textSize="20dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"
        android:text="京东特供"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_jd"/>
        <ImageView

            android:layout_marginTop="13dp"
            android:padding="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/name_arrow_night"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
    <TextView
        android:textSize="20dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"
        android:text="我要爆料"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_bl"/>
            <ImageView

                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/name_arrow_night"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
    <TextView
        android:textSize="20dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"

        android:text="用户反馈"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_user"/>
                <ImageView

                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/name_arrow_night"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
    <TextView
        android:textSize="20dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"
        android:text="系统设置"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/bt_setting"/>
                    <ImageView
                        android:layout_marginTop="12dp"
                        android:padding="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/name_arrow_night"/>
                </LinearLayout>



</LinearLayout>
